@model pizzaClient.Models.Pizza

@{
    ViewData["Title"] = "Detail";
}

<head>
    <style>
        body {
            background-image: url(/image.jpg);
            height: 1000px;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: relative;
        }
    </style>
</head>

<div class="row bg-white text-dark rounded m-4 p-4">
    <div class="col-md-6 order-md-6">
        <img src="/Images/@Html.DisplayFor(model => model.ImageFileName)" alt="" class="w-75 img-thumbnail" />
    </div>
    <div class="col-md-6 order-md-1">
        <div class="row align-items-center h-100">
            <div class="col">
                <h1 class="display-3">@Html.DisplayFor(model => model.PizzaName)</h1>
                <p class="lead">
                    <dl>
                        <dd class="col-sm-12">
                                <span class="badge badge-success">Veg</span>
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Speciality)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Speciality)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-10">
                            &#x20B9;@Html.DisplayFor(model => model.Price)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.PizzaDescription)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.PizzaDescription)
                        </dd>

                    </dl>
                    <input type="button" class="btn btn-danger rounded" value="Back To Menu" onclick="location.href='@Url.Action("VegPizza", "Veg")'" />
                </p>
            </div>
        </div>
    </div>
</div>
