@model pizzaClient.Models.Order

@{
    ViewData["Title"] = "Success";
}
<head>
    <style>
        body {
            background-image: url(/image.jpg);
            height: 500px;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: relative;
        }
    </style>
</head>
<h1 class="bg-success text-center m-4 p-4">Ordered SuccessFully</h1>

<div class="bg-white m-4 p-4 rounded">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerPhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerPhone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Toppings)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Toppings)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CrustType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CrustType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeliveryDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryDate)
        </dd>
    </dl>
    <input type="button" class="btn btn-danger rounded-pill text-center" value="Back To HomePage" onclick="location.href='@Url.Action("Index", "Pizza")'" />
</div>
